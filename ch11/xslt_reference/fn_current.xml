<?xml version="1.0" encoding="UTF-8"?>
<reference xml:id="fn_current" scheme="xsl">
   <body>
      <purpose>
         <p>Returns the current context item.</p>
      </purpose>
      <syntax>current()</syntax>
      <examples>
         <codeblock><![CDATA[
<xsl:when test="@scheme">
   <xsl:copy-of select="xm:getentry-by-id(current()/@href,current()/@scheme)"/>
</xsl:when> ]]></codeblock>
      </examples>
      <related label="related">
         <link href="xsl_functions"/>
      </related>
   </body>
</reference>
