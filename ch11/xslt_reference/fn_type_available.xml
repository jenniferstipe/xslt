<?xml version="1.0" encoding="UTF-8"?>

<reference xml:id="fn_type_available" scheme="xsl">
   <body>
      <purpose><p>Tests if a given schema type is available.</p></purpose>
      <syntax>type-available (name)</syntax>
      <properties type="parameter">
         <property xml:id="name">
            <name>name</name>
            <description>The name of the type to test for.</description>
            <type>xsl:QName</type>
            <required state="required"/>
         </property>         
      </properties>
      <examples>
         <codeblock><![CDATA[
<xsl:if test="type_available('xs:token')">
   ...
</xsl:if>]]></codeblock>
      </examples>
      <related label="related">
         <link href="xsl_functions"/>
      </related>
   </body>
</reference>
